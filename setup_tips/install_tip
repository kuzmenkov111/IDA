## JAVA
http://tecadmin.net/steps-to-install-java-on-centos-5-6-or-rhel-5-6/
# decompress
tar xzf jdk-7u75-linux-x64.tar.gz
# env
Setup JAVA_HOME Variable
	# export JAVA_HOME=/opt/jdk1.8.0_40
Setup JRE_HOME Variable
	# export JRE_HOME=/opt/jdk1.8.0_40/jre
Setup PATH Variable
	# export PATH=$PATH:$JAVA_HOME/bin:$JRE_HOME/bin
## SCALA
http://mind.mabs.me/how-to-install-scala-2-10-4-on-centos/

# export SCALA_HOME=/opt/scala-2.11.4
# export PATH=$PATH:$SCALA_HOME/bin

# export SBT_HOME=/opt/sbt
# export PATH=$PATH:$SBT_HOME/bin

$ source /etc/profile

# move directory
su -
cd /
mv home/jaehyeon/jdk1.8.0_40 opt/
mv home/jaehyeon/Downloads/ScalaLabJan15 opt/

# after modifying path, source .bashrc
source ~/.bashrc

## scala lab
# execution permission by x
chmod ug+x RunScalaLabLinux64.sh

## Spark
download prebuilt version
export SPARK_HOME=/opt/spark-1.2.1-bin-hadoop2.4
export PATH=$PATH:$SPARK_HOME/bin

